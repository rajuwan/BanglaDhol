<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#000000" />

            <gradient android:angle="-90" android:endColor="#BD3B04" android:startColor="#BD3B04" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#BD3B04" />

            <solid android:color="#BD3B04" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#000000" />

            <gradient android:angle="-90" android:endColor="#BD3B04" android:startColor="#8dbab3" />
        </shape></item>

</selector>