<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="130.0dip"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardUseCompatPadding="true"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="130.0dip"
        android:layout_height="wrap_content"
        android:paddingRight="0.0dip" >

        <ImageView
            android:id="@+id/iv_card_image"
            android:layout_width="130.0dip"
            android:layout_height="130.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/no_img" />

        <com.ebs.banglalinkbangladhol.typefacedviews.TypefacedTextView
            android:id="@+id/tv_card_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/card_text_height"
            android:layout_below="@+id/iv_card_image"
            android:background="@color/colorPrimary"
            android:ellipsize="end"
            android:gravity="left|center"
            android:includeFontPadding="false"
            android:paddingLeft="4.0dip"
            android:paddingRight="4.0dip"
            android:singleLine="true"
            android:textColor="#f2f2f2"
            android:textSize="@dimen/home_card_title_size" />

        <ImageView
            android:id="@+id/iv_song_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_card_title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:src="@drawable/selector_card_play_icon" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>