<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_createPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ CREATE NEW PLAYLIST"
        android:background="@drawable/playlist_rounded_corner"
        android:ellipsize="end"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:includeFontPadding="false"
        android:padding="15.0dip"
        android:maxLines="1"
        android:textColor="@color/orange_button"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_no_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="SELECT PLAYLIST"
        android:textColor="@color/cardview_dark_background"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/counter_text_color"/>

    <ListView
        android:id="@+id/lv_playlistList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_sub_head"
        android:cacheColorHint="@android:color/transparent"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:divider="@color/counter_text_color"
        android:dividerHeight="1.0dp"
        android:visibility="visible"
        android:scrollbars="none"
        android:smoothScrollbar="true" />

    <ProgressBar
        android:id="@+id/splashPlaylistProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" >
    </ProgressBar>

</LinearLayout>