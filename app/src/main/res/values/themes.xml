<resources>

    <!-- Base application theme.
        //01 959176721 652520

    -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:displayOptions">homeAsUp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="list_download_item_first_line">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/first_line_color</item>
    </style>

    <style name="list_download_item_second_line">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/second_line_color</item>
    </style>

    <style name="gaana_player_timer">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="featured_playlist_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/first_line_color</item>
    </style>

    <style name="ItemTitle">
        <item name="android:textSize">24.0sp</item>
        <item name="android:textColor">#FFFFDA</item>
        <item name="android:textColorHint">#ffa1a1a1</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="DialogButton" parent="@style/GreenButton">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/dialog_button_text_negative</item>
        <item name="android:background">@drawable/selector_dialog_button</item>
        <item name="android:padding">12.0dip</item>
    </style>

    <style name="GreenButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_green</item>
        <item name="android:paddingLeft">40.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">40.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="OrangeButton">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#f2f2f2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SubButton">
        <item name="android:textSize">14.0sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#180000</item>
        <item name="android:background">@drawable/selector_btn_subscription</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:paddingRight">25.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SubButtonSelected">
        <item name="android:textSize">14.0sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/selector_btn_subscription_selected</item>
        <item name="android:paddingLeft">25.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">25.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="sidebar_selected">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/left_menu_buttons</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialog_text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/first_line_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="setting_text">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/first_line_color</item>
    </style>

    <style name="item_header_line">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/item_header_color</item>
    </style>

    <style name="setting_text_details">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/first_line_color</item>
    </style>

    <style name="orange_button_style">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme_Dialog">

        <item name="android:background">#000000</item>
    </style>

    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/gaana.red_alfa_60</item>
        <item name="colorButtonNormal">@color/gaana.red</item>
    </style>

    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
